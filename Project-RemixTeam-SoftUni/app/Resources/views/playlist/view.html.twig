

{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content" id="listUsers">
        <div class="well" id="wellCatalog">
            <h2 class="listTitle">{{ playlist.name }}</h2>
            <div class="row">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                        <th>Song Name</th>
                        <th>Song Author</th>
                        <th>Category</th>
                        <th>Cover</th>
                        <th>Listen</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for song in songs %}
                        <tr>
                        <tr id="catalogRows">
                        <tr onclick="document.location = '{{ path('song_view', {'id': song.id}) }}';" id="listSongs">
                            <td>{{ song.songName }}</td>
                            <td>{{ song.songAuthor }}</td>
                            <td>{{ song.category }}</td>
                            <td><img src="{{ cover_directory~'/'~song.coverFile }}" id="coverList"/></td>
                        <td>
                            <object type="application/x-shockwave-flash" data="http://flash-mp3-player.net/medias/player_mp3_maxi.swf" >
                                <param name="movie" value="http://flash-mp3-player.net/medias/player_mp3_maxi.swf" />
                                <param name="bgcolor" value="#ffffff" />
                                <param name="FlashVars" id="" value="mp3={{ song_directory~'/'~song.file }}&amp;width=200&amp;height=20&amp;showstop=1&amp;showvolume=1&amp;showloading=always&amp;buttonwidth=15&amp;volumewidth=20&amp;volumeheight=7" />
                            </object>
                        </td>
                        </tr>

                        <tr id="uploaderRow">
                            <th id="uploaderLabel">Uploader: </th>
                            <td id="uploaderTd"><a href="{{ path('view_user_uploads', {'id': song.uploader.id}) }}" id="uploaderLink">{{ song.uploader }}</a></td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}
