
{% extends 'base.html.twig' %}



    {% block main %}
        <div class="container body-content span=8 offset=2" id="deleteUsers" >
            <div class="well" id="deleteAdminForm">
                <form class="form-horizontal" action="{{ path('song_delete',{'id' : song.id}) }}" method="post" id="deleteForm">
                    <fieldset>
                        <legend>Delete Song</legend>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_email">Song Name</label>
                            <input class="form-control" id="user_email" value="{{ song.songName }}" name="user_edit[email]" required type="email" disabled>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="user_fullName">Song Author</label>
                            <input type="text" class="form-control" id="user_fullName" value="{{ song.songAuthor }}" name="user_edit[fullName]" disabled>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="article_category">Category</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.category, { 'attr':{'readonly':'readonly'}}) }}
                            </div>
                        </div>

                        {{ form_row(form._token) }}
                        <div class="form-group">

                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="{{ path('print_all_songs') }}" class="btn btn-primary" id="cancelButton">Cancel</a>

                        </div>
                    </fieldset>
                </form>
            </div>
        </div>


{% endblock %}








