
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style-loginRegister.css') }}">
    <style>
        .navbar-right #logout{
            display: block;
        }
    </style>
</head>
<body>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href=""><img src="{{ asset('pictures/remixLogo2.jpg') }}" alt=""> <span id="logoFirstWord">Home</span><span id="logoSecondWord">Page</span></a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span> About Us</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-music"></span> Top 10</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-phone-alt"></span> Contacts</a></li>
            </ul>
        </div>
    </div>
</nav>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        <div class="item active">

            <!--Login form-->
            <div id="id03" class="modal">

                {{ form_start(form, {'attr': {'class': 'modal-content animate'}}) }}
                <div class="imgcontainer">
                    <span onclick="closeModalFunction()" class="close" title="Close Modal">&times;</span>
                    <img src="{{ asset('pictures/remixLogo2.jpg') }}" alt="Avatar" class="avatar">
                    <p class="formText">Upload</p>
                </div>

                <div class="container">
                    {{ form_row(form.file, {'attr': {
                        'class': 'uploadFile'
                    }}) }}
                    <br/>
                    {{ form_row(form.coverFile, {'attr': {
                        'required': false, 'class': 'uploadFile'
                    }}) }}
                    <br/>
                    {{ form_row(form.songName, { 'attr': {
                        'placeholder': 'Song name' }})  }}
                    {{ form_row(form.songAuthor, { 'attr': {
                        'placeholder': 'Song author' }})  }}
                    <br/>
                    <button type="submit">Upload song</button>
                    {{ form_end(form) }}
                </div>
            </div>

            <!--Registration form-->
            <div id="id02" class="modal">
                <form class="modal-content animate" action="{{ path('user_register') }}" method="post">
                    <div class="imgcontainer">
                        <span onclick="closeModalFunction()" class="close" title="Close Modal">&times;</span>
                        <img src="{{ asset('pictures/remixLogo2.jpg') }}" alt="Avatar" class="avatar">
                        <p class="formText">Registration</p>
                    </div>

                    <div class="container">
                        <label><b>Name</b></label>
                        <input type="text" placeholder="Enter Name" name="name" required>

                        <label><b>Username</b></label>
                        <input type="text" placeholder="Enter Username" name="uname" required>

                        <label><b>Email</b></label>
                        <input type="text" placeholder="Enter Email" name="email" required>

                        <label><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>

                        <label><b>Confirm Password</b></label>
                        <input type="password" placeholder="Confirm Password" name="confirmPassword" required>


                        <button type="submit">Register</button>
                    </div>
                </form>
            </div>

            <div class="title">
                <h4 id="teamPresents">RemixTeam presents</h4>
                <img src="{{ asset('pictures/title_Logo.png') }}" alt="" id="titleLogo">
                <img src="{{ asset('pictures/title.png') }}" alt="" id="titleText">
            </div>
            <div class="buttons">
                <ul class="rotateButtons">
                    <li class="rotateButton"><a href="{{ path('upload_song') }}" class="round upload">Upload<span class="round">Share your song with us</span></a></li>
                    <li class="rotateButton"><a href="{{ path('print_all_songs') }}" class="round catalog">Catalog<span class="round">Take a look.</span></a></li>
                </ul>
            </div>

        </div>
    </div>
</div>

<footer class="container-fluid text-center">

</footer>
<script>
    function closeModalFunction() {
        document.getElementById('id03').style.display='none';
        document.location.href="/profile";

    }
</script>
<script type="text/javascript">
    document.getElementById('id03').style.display='block';
</script>
<script src="{{ asset('js/loginAndRegister.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/jquery-1.10.2.js') }}"></script>
<script src="{{ asset('js/moment.min.js') }}"></script>
<script src="{{ asset('js/bootstrap.js') }}"></script>
<script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
</body>
</html>







