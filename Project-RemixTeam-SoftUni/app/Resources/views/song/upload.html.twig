{% extends 'base.html.twig' %}

{% block main %}

    <!--Upload form-->
    <div id="id03" class="modal">

        {{ form_start(form, {'attr': {'class': 'modal-content animate'}}) }}
        <div class="imgcontainer">
            <span onclick="closeModalFunction()" class="close" title="Close Modal">&times;</span>
            <img src="{{ asset('pictures/remixLogo2.jpg') }}" alt="Avatar" class="avatar">
            <p class="formText">Upload</p>
        </div>

        <div class="container">
            {{ form_row(form.file, {'attr': {
                'class': 'uploadFile'
            }}) }}
            <br/>
            {{ form_row(form.coverFile, {'attr': {
                'required': false, 'class': 'uploadFile'
            }}) }}
            <br/>
            {{ form_row(form.songName, { 'attr': {
                'placeholder': 'Song name' }})  }}
            {{ form_row(form.songAuthor, { 'attr': {
                'placeholder': 'Song author' }})  }}
            <br/>
            <button type="submit">Upload song</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="buttons">
        <ul class="rotateButtons">
            <li class="rotateButton"><a href="{{ path('upload_song') }}" class="round upload">Upload<span class="round">Share your song with us</span></a></li>
            <li class="rotateButton"><a href="{{ path('print_all_songs') }}" class="round catalog">Catalog<span class="round">Take a look.</span></a></li>
        </ul>
    </div>

{% block javascripts %}
    <script>
        function closeModalFunction() {
            document.getElementById('id03').style.display='none';
            window.history.replaceState( {} , '/profile' );
            window.history.back();

        }
    </script>
    <script type="text/javascript">
        document.getElementById('id03').style.display='block';
    </script>
{% endblock %}

{% endblock %}






