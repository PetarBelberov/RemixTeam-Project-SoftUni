
{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="well">
            <h2>All Categories -
                <a href="{{ path('admin_categories_create') }}" class="btn btn-warning">Create New</a>
            </h2>
            <div class="row">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}

                        <tr>
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.getName() }}</td>
                            <td>
                                <a href="{{ path('admin_categories_edit', {'id':category.id}) }}">Edit</a>
                                <a href="{{ path('admin_categories_delete', {'id':category.id}) }}">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
